{
  "name": "green-greeting-frontend",
  "version": "1.0.0",
  "description": "Frontend for the Green Greeting Application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "app.js",
      "config.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
