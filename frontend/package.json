{
  "name": "greeting-frontend",
  "version": "1.0.0",
  "description": "Green-themed greeting application frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!server.js",
      "!jest.setup.js"
    ]
  },
  "keywords": ["greeting", "frontend", "javascript", "green-theme"],
  "author": "",
  "license": "MIT"
}